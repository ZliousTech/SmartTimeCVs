<style>
    .card-view {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin-top: 40px;
    }

    .section-title {
        border-left: 5px solid #198754;
        padding-left: 10px;
        font-weight: bold;
        font-size: 1.3rem;
        margin-top: 30px;
        margin-bottom: 20px;
        color: #198754;
    }

    .rtl .section-title {
        border-left: none;
